@{
	ViewData["Title"] = "Home Page";
}

<div class="text-center">
	<div class="container">

		<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
			<div class="col">
				<div class="card shadow-sm" style="width:252px">
					<div class="card-body">
						<form asp-controller="Home" asp-action="SaveBook" method="POST">
							<div class="form-floating mb-3">
								<input name="txtIsbn" type="text" class="form-control" id="floatingInput" placeholder="name@example.com" required>
								<label for="floatingInput">ISBN</label>
							</div>
							<div class="form-floating mb-3">
								<input name="txtTitle" type="text" class="form-control" id="floatingInput" placeholder="name@example.com" required>
								<label for="floatingInput">Title</label>
							</div>
							<div class="form-floating mb-3">
								<select name="slAuthor" class="form-select" id="floatingSelect" aria-label="Floating label select example" required>
									<option selected>Open this select menu</option>
									<option value="Paulo Cohelo">Paulo Cohelo</option>
									<option value="Shakespiare">Shakespiare</option>
									<option value="John Doe">John Doe</option>
								</select>
								<label for="floatingSelect">Select the author</label>
							</div>
							<div class="form-floating mb-3">
								<input name="txtDate" type="date" class="form-control" id="floatingInput" placeholder="name@example.com" required>
								<label for="floatingInput">Date</label>
							</div>
							<hr />
							<button type="submit" class="btn btn-primary">Save</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
